<!DOCTYPE html>
<html>
<head>
    <title>CRUD using Node.JS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body class="bg-info">
    <div class="row">
        <div class="col-md-10 offset-md-1" style="background-color: #fff;margin-top: 25px; padding:20px;">
            
            <h3 style="text-align: center;">All List</h3>
            <a class="btn btn-secondary" href="/"><i class="fa fa-plus"></i> Create New</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Job Type</th>
                        <th>Salary</th>
                        <th>Company</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                   <% doc.forEach((row, index) => { %>
                    <tr>
                        
                        <td><%= row.fname %></td>
                        <td><%= row.lname %></td>
                        <td><%= row.email %></td>
                        <td><%= row.contact %></td>
                        <td><%= row.job %></td>
                        <td><%= row.salary %></td>
                        <td><%= row.company %></td>
                        <td><%= row.add %></td>
                        <td>
                            <a href="/<%= row._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                            <a href="/delete/<%= row._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                   <% }) %>
                </tbody> 
            </table>

        </div>
    </div>

</body>
</html>